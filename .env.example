WHATSAPP_ACCESS_TOKEN="your-access-token"
WHATSAPP_WEBHOOK_SECRET="your-webhook-secret-here"
WHATSAPP_VERIFY_TOKEN="your-verify-token-here"

# ============================================
# CORS & SECURITY
# ============================================
ALLOWED_ORIGINS="https://your-app.onrender.com"